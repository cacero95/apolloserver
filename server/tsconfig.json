{
  "compilerOptions": {
    "module": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": ".cache",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
